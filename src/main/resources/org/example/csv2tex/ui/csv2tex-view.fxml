<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="mainLayout" alignment="CENTER" prefHeight="300.0" prefWidth="700.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.csv2tex.ui.Csv2TexController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
        <children>
            <Button fx:id="openCsvButton" alignment="CENTER" contentDisplay="CENTER" onAction="#onOpenCsvButtonClick"
                    prefHeight="50.0" prefWidth="200.0" text="Pick a CSV file!" textAlignment="CENTER">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </Button>
            <Label fx:id="csvFileLabel" prefHeight="50.0" prefWidth="450.0" text="[CSV file]">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </Label>
        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </HBox>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
        <children>
            <Button fx:id="openTexButton" alignment="CENTER" contentDisplay="CENTER" onAction="#onOpenTexButtonClick"
                    prefHeight="50.0" prefWidth="200.0" text="Pick a TEX file!" textAlignment="CENTER">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </Button>
            <Label fx:id="texFileLabel" prefHeight="50.0" prefWidth="450.0" text="[TEX file]">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </Label>
        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </HBox>
    <Button fx:id="renderPdfButton" mnemonicParsing="false" onAction="#onRenderPdfButtonClick" prefHeight="50.0"
            prefWidth="400.0" text="Render PDFs!"/>
</VBox>
